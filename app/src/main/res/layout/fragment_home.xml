<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment"
    android:background="@drawable/gradient_1"
    >

    <TextView
        android:id="@+id/text_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textSize="20sp"
        android:textColor="@android:color/transparent"
         />
    <EditText
        android:id="@+id/from"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginTop="150dp"
        android:ems="10"
        android:hint="@string/From_hint"
        android:textSize="14sp"
        android:drawableRight="@drawable/customer_from_icon"
        android:layout_marginStart="50dp"
        android:drawablePadding="12dp"
        android:background="@drawable/from_to_custom_input"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:layout_centerHorizontal="true"


        />

    <EditText
        android:id="@+id/to"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginTop="230dp"
        android:ems="10"
        android:hint="@string/to_hint"
        android:textSize="14sp"
        android:drawableRight="@drawable/customer_to_icon"
        android:layout_marginStart="50dp"
        android:background="@drawable/from_to_custom_input"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:layout_centerHorizontal="true"


        />

    <Button
        android:id="@+id/home_button1"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Date"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="320dp"
        android:background="@drawable/home_button_background"
        android:drawableEnd="@drawable/ic_calendar"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"

        />

    <Button
        android:id="@+id/home_button2"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Time"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="390dp"
        android:background="@drawable/home_button_background"
        android:drawableEnd="@drawable/ic_time"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"

        />

    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:text="Search"
        android:layout_marginTop="460dp"
        android:background="@drawable/home_search_button_background"
        android:textColor="@android:color/white"



        />








</RelativeLayout>